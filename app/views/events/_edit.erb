
<%
  # decide whether the datetime times should be displayed
  style = event.all_day ? " style='display: none;'" : ""
%>

<% form_for(event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.check_box :all_day %> <%= f.label :all_day_event %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at, :datetime_separator => "<span id='event_start_time'#{style}><br />", :minute_step => 15 %></span>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at, :datetime_separator => "<span id='event_end_time'#{style}><br />", :minute_step => 15 %></span>
  </p>
  <div id="reminders">
    <%= f.label :reminders %> <%= add_link f %><br />
    <%= render 'reminder', :pf => f, :ff_args => :reminders %>
  </div>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "30x5" %>
  </p>
  <p>
    <%= f.submit 'Submit' %> - 
    <%= link_to_close_redbox "Cancel", :class => "ajax", "title" => "Cancel" %>
  </p>
<% end %>
