<div class="title">
  Edit Event
</div>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.check_box :all_day %> <%= f.label :all_day_event %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "30x10" %>
  </p>
  <p>
    <%= f.submit 'Submit' %> - 
    <%= link_to_close_redbox "Cancel", :class => "ajax", "title" => "Cancel" %>
  </p>
<% end %>
