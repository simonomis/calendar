<div class="subtitle">
  <%=h @event.name %>
</div>

<div class="event">
  <%=h date_full @event %>
</div>

<div class="event">
  Notes:
</div>

<div class="event-notes">
  <%=h @event.notes %>
</div>

<div class="controls">
  <%= link_to_close_redbox "Back" %> --

  <%= link_to_remote_redbox "Edit", { :method => "get",
		:url => { :action => "edit", :id => @event.id }	} %> --
	
  <%= link_to 'Delete', @event, :method => :delete,
		:confirm => 'Really delete this event?' %>
</div>
